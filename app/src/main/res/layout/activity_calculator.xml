<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_calculator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/Grey29"
    tools:context="com.apareciumlabs.brionsilva.calculator.Calculator">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:text=""
            android:hint=""
            android:textSize="70px"
            android:textAlignment="center"
            android:layout_width="290dp"
            android:layout_height="60dp"
            android:id="@+id/operationTextView"/>

        <TextView
            android:text=""
            android:hint=""
            android:textSize="150px"
            android:textColor="@color/White"
            android:textAlignment="center"
            android:layout_width="290dp"
            android:layout_height="100dp"
            android:id="@+id/answerTextView"/>

    </LinearLayout>


    <!--First Row-->
    <Button
        android:text="CLEAR"
        android:layout_width="201dp"
        android:layout_height="80dp"
        android:textSize="60px"
        android:id="@+id/clearBtn"
        android:background="@color/Grey39"
        android:layout_marginTop="190dp"
        android:layout_marginLeft="4dp"/>
    <Button
        android:text="+"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:textSize="60px"
        android:id="@+id/plusBtn"
        android:background="@color/Grey39"
        android:layout_marginTop="190dp"
        android:layout_marginLeft="206dp"/>

    <Button
        android:text="-"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:textSize="60px"
        android:id="@+id/minusBtn"
        android:background="@color/Grey39"
        android:layout_marginTop="190dp"
        android:layout_marginLeft="307dp"/>

    <!--Second Row-->
    <Button
        android:text="1"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:textSize="60px"
        android:id="@+id/oneBtn"
        android:background="@color/Grey39"
        android:layout_marginTop="271dp"
        android:layout_marginLeft="4dp"/>
    <Button
        android:text="2"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:textSize="60px"
        android:id="@+id/twoBtn"
        android:background="@color/Grey39"
        android:layout_marginTop="271dp"
        android:layout_marginLeft="105dp"/>
    <Button
        android:text="3"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:textSize="60px"
        android:id="@+id/threeBtn"
        android:background="@color/Grey39"
        android:layout_marginTop="271dp"
        android:layout_marginLeft="206dp"/>

    <Button
        android:text="/"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:textSize="60px"
        android:id="@+id/divisionBtn"
        android:background="@color/Grey39"
        android:layout_marginTop="271dp"
        android:layout_marginLeft="307dp"/>

    <!--Third Row-->
    <Button
        android:text="4"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:textSize="60px"
        android:id="@+id/fourBtn"
        android:background="@color/Grey39"
        android:layout_marginTop="352dp"
        android:layout_marginLeft="4dp"/>
    <Button
        android:text="5"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:textSize="60px"
        android:id="@+id/fiveBtn"
        android:background="@color/Grey39"
        android:layout_marginTop="352dp"
        android:layout_marginLeft="105dp"/>
    <Button
        android:text="6"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:textSize="60px"
        android:id="@+id/sixBtn"
        android:background="@color/Grey39"
        android:layout_marginTop="352dp"
        android:layout_marginLeft="206dp"/>


    <Button
        android:text="x"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:textSize="60px"
        android:id="@+id/multiBtn"
        android:background="@color/Grey39"
        android:layout_marginTop="352dp"
        android:layout_marginLeft="307dp"/>

    <!--Fourth Row-->
    <Button
        android:text="7"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:textSize="60px"
        android:id="@+id/sevenBtn"
        android:background="@color/Grey39"
        android:layout_marginTop="433dp"
        android:layout_marginLeft="4dp"/>
    <Button
        android:text="8"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:textSize="60px"
        android:id="@+id/eightBtn"
        android:background="@color/Grey39"
        android:layout_marginTop="433dp"
        android:layout_marginLeft="105dp"/>
    <Button
        android:text="9"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:textSize="60px"
        android:id="@+id/nineBtn"
        android:background="@color/Grey39"
        android:layout_marginTop="433dp"
        android:layout_marginLeft="206dp"/>

    <!--Fifth Row-->
    <Button
        android:text="0"
        android:layout_width="201dp"
        android:layout_height="85dp"
        android:textSize="60px"
        android:id="@+id/zeroBtn"
        android:background="@color/Grey39"
        android:layout_marginTop="514dp"
        android:layout_marginLeft="4dp"/>
    <Button
        android:text="."
        android:layout_width="100dp"
        android:layout_height="85dp"
        android:textSize="60px"
        android:id="@+id/dotBtn"
        android:background="@color/Grey39"
        android:layout_marginTop="514dp"
        android:layout_marginLeft="206dp"/>

    <Button
        android:text="="
        android:layout_width="100dp"
        android:layout_height="166dp"
        android:textSize="60px"
        android:background="@color/Gold"
        android:id="@+id/equalBtn"
        android:layout_marginTop="433dp"
        android:layout_marginLeft="307dp"/>


</RelativeLayout>
